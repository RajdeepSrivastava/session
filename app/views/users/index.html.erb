<h1>Account Login</h1>

<%= form_tag("/users/create", method: "post") do %>
  <label>Email:</label>
  <%= email_field_tag :email, required: true  %>

  <label>Password:</label>
  <%= password_field_tag :password, required: true %>


  <%= submit_tag "Submit" %>
<% end %>

<%= link_to "New User", "/users/new", class: "new-user-link" %>
